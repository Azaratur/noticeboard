<resources>

    <style name="NoticeBoardTheme" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/noticeBoardColorPrimary</item>
        <item name="colorPrimaryDark">@color/noticeBoardColorPrimaryDark</item>
        <item name="colorAccent">@color/noticeBoardColorAccent</item>
    </style>

    <style name="NoticeBoardTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="NoticeBoardTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="NoticeBoardTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="NoticeBoard" />


    <!-- Header Styles-->

    <style name="NoticeBoard.Header" />

    <style name="NoticeBoard.Header.Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="NoticeBoard.Header.Date">

        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline6
        </item>

    </style>

    <style name="NoticeBoard.Header.Version">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Caption</item>
    </style>

    <!-- Change Type Styles-->

    <style name="NoticeBoard.Change" />


    <style name="NoticeBoard.Change.Type">
        <item name="android:lines">1</item>
        <item name="android:padding">@dimen/notice_board_spacing_medium</item>
        <item name="android:maxWidth">144dp</item>
        <item name="android:background">@drawable/background_change_fixed</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/notice_board_change_type_text_default</item>
    </style>

    <style name="NoticeBoard.Change.Description">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">3</item>
        <item name="android:gravity">center_vertical|start</item>
    </style>

</resources>
